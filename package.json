{
  "name": "webdriverio-mocha-chai-framework",
  "version": "1.0.0",
  "description": "Framework for web browser automation using webdriverio, mocha, and chai in Page Object Model. For reporting allure is adapted. ",
  "main": "index.js",
  "scripts": {
    "test": "npx wdio run wdio.conf.js",
    "lint": "eslint .",
    "report": "allure serve reports/allure-results",
    "report.ci": "npx allure generate reports/allure-results --clean -o allure-report",
    "create.secret": "node ./test/utilities/generatekey.js",
    "read.secret": "node ./test/utilities/decryptkey.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nareshnavinash/webdriverio-mocha-chai-framework.git"
  },
  "keywords": [
    "mocha",
    "chai",
    "allure",
    "webdriverio",
    "page-object-model",
    "e2e",
    "selenium",
    "test automation",
    "javascript"
  ],
  "author": "Naresh Sekar",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/nareshnavinash/webdriverio-mocha-chai-framework/issues"
  },
  "homepage": "https://github.com/nareshnavinash/webdriverio-mocha-chai-framework#readme",
  "dependencies": {
    "@wdio/cli": "^6.0.13",
    "@wdio/sync": "^6.0.12",
    "chai": "^4.2.0",
    "node-rsa": "^1.1.1",
    "rimraf": "^3.0.2",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@wdio/allure-reporter": "^6.0.12",
    "@wdio/junit-reporter": "^6.0.12",
    "@wdio/local-runner": "^6.0.13",
    "@wdio/mocha-framework": "^6.0.13",
    "@wdio/sauce-service": "^6.0.13",
    "@wdio/selenium-standalone-service": "^6.0.12",
    "@wdio/spec-reporter": "^6.0.12",
    "allure-commandline": "^2.13.0",
    "babel-eslint": "^10.1.0",
    "chromedriver": "^84.0.0",
    "eslint": "^7.5.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-mocha": "^7.0.1",
    "geckodriver": "^1.19.1",
    "wdio-chromedriver-service": "^6.0.3",
    "wdio-geckodriver-service": "^1.1.0",
    "wdio-json-reporter": "^2.0.0"
  }
}
